<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">


    <ImageView
        android:id="@+id/icSpeed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cached_black_24dp"

        app:layout_constraintBottom_toBottomOf="@id/centSpeed1000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/centSpeed1000" />


    <EditText
        android:id="@+id/centSpeed1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/centSpeed1000"
        android:textAlignment="textEnd"

        app:layout_constraintRight_toLeftOf="@id/icSpeed1"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/icSpeed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cached_black_24dp"

        app:layout_constraintBottom_toBottomOf="@id/centSpeed2000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/centSpeed2000" />


    <EditText
        android:id="@+id/centSpeed2000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/centSpeed2000"
        android:textAlignment="textEnd"

        app:layout_constraintRight_toLeftOf="@id/icSpeed2"
        app:layout_constraintTop_toBottomOf="@id/centSpeed1000" />


    <ImageView
        android:id="@+id/icSpeed3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cached_black_24dp"

        app:layout_constraintBottom_toBottomOf="@id/centSpeed3000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/centSpeed3000" />


    <EditText
        android:id="@+id/centSpeed3000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/centSpeed3000"
        android:textAlignment="textEnd"

        app:layout_constraintRight_toLeftOf="@id/icSpeed3"
        app:layout_constraintTop_toBottomOf="@id/centSpeed2000" />


    <ImageView
        android:id="@+id/icTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:src="@android:drawable/ic_lock_idle_alarm"
        app:layout_constraintBottom_toBottomOf="@id/centTime1"
        app:layout_constraintLeft_toRightOf="@id/centTime1"
        app:layout_constraintTop_toTopOf="@id/centTime1" />

    <EditText
        android:id="@+id/centTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/centTime1"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/icTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:src="@android:drawable/ic_lock_idle_alarm"
        app:layout_constraintBottom_toBottomOf="@id/centTime2"
        app:layout_constraintLeft_toRightOf="@id/centTime2"
        app:layout_constraintTop_toTopOf="@id/centTime2" />

    <EditText
        android:id="@+id/centTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/centTime2"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/centTime1" />


    <ImageView
        android:id="@+id/icTime3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:src="@android:drawable/ic_lock_idle_alarm"
        app:layout_constraintBottom_toBottomOf="@id/centTime3"
        app:layout_constraintLeft_toRightOf="@id/centTime3"
        app:layout_constraintTop_toTopOf="@id/centTime3" />

    <EditText
        android:id="@+id/centTime3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/centTime3"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/centTime2" />

    <Switch
        android:id="@+id/cent12checkHolders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/checkHolders"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/centTime3"/>


</android.support.constraint.ConstraintLayout>

