<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="il.co.diamed.com.form.devices.IncubatorActivity">

    <include
        android:id="@+id/header"
        layout="@layout/form_header" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/midLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@id/lowLayout"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintVertical_weight="1">


        <TextView
            android:id="@+id/tvDeviceModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/incType"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/rgModelSelect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rgModelSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/etDeviceSerial"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDeviceModel">

            <RadioButton
                android:id="@+id/si"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/incTypeSI" />

            <RadioButton
                android:id="@+id/sii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/incTypeSII" />

            <RadioButton
                android:id="@+id/l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/incTypeL" />
        </RadioGroup>


        <TextView
            android:id="@+id/tvDeviceSerial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/tvDeviceSerial"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@id/etDeviceSerial"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"

            app:layout_constraintLeft_toRightOf="@id/etDeviceSerial"
            app:layout_constraintTop_toBottomOf="@id/rgModelSelect" />

        <EditText
            android:id="@+id/etDeviceSerial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/formSerial"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:inputType="text"
            app:layout_constraintRight_toLeftOf="@id/tvDeviceSerial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rgModelSelect" />
    </android.support.constraint.ConstraintLayout>


    <View
        android:id="@+id/lowLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


    <include
        android:id="@+id/footer"
        layout="@layout/form_footer" />

</android.support.constraint.ConstraintLayout>
