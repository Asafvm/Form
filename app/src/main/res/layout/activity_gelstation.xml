<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustPan"
    tools:context=".devices.GelstationActivity">


    <include
        android:id="@+id/header"
        layout="@layout/form_header"
 />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/midLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@id/lowLayout"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintVertical_weight="1">


        <include
            android:id="@+id/serialLayout"
            layout="@layout/form_serial"/>




    </android.support.constraint.ConstraintLayout>


    <View
        android:id="@+id/lowLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


    <include
        android:id="@+id/footer"
        layout="@layout/form_footer"
/>


</android.support.constraint.ConstraintLayout>