<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_window_menu"
    android:padding="30dp"

    >


    <TextView
        android:id="@+id/tvEditorTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/editor_title"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/swEditorWarranty"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Switch
        android:id="@+id/swEditorWarranty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/devUnderWarranty"
        app:layout_constraintBottom_toTopOf="@id/btnEditor_changeIns"
        app:layout_constraintTop_toBottomOf="@id/tvEditorTitle" />

    <TextView
        android:id="@+id/tvEditorInsDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/editor_installdate"
        app:layout_constraintBaseline_toBaselineOf="@id/btnEditor_changeIns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.4"
        app:layout_constraintStart_toEndOf="@id/etEditorInsDate" />

    <TextView
        android:id="@+id/etEditorInsDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBaseline_toBaselineOf="@id/btnEditor_changeIns"
        app:layout_constraintEnd_toStartOf="@id/tvEditorInsDate"
        app:layout_constraintHorizontal_weight="0.4"
        app:layout_constraintStart_toEndOf="@id/btnEditor_changeIns" />

    <Button
        android:id="@+id/btnEditor_changeIns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_button_submit_thin_normal"
        android:text="@string/change"
        app:layout_constraintBottom_toTopOf="@id/btnEditor_changeEow"
        app:layout_constraintEnd_toStartOf="@id/etEditorInsDate"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/swEditorWarranty" />

    <TextView
        android:id="@+id/tvEditorEOWdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/editor_eowdate"
        app:layout_constraintBaseline_toBaselineOf="@id/btnEditor_changeEow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.4"
        app:layout_constraintStart_toEndOf="@id/etEditorEOWdate" />


    <TextView
        android:id="@+id/etEditorEOWdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBaseline_toBaselineOf="@id/btnEditor_changeEow"
        app:layout_constraintEnd_toStartOf="@id/tvEditorEOWdate"
        app:layout_constraintHorizontal_weight="0.4"
        app:layout_constraintStart_toEndOf="@id/btnEditor_changeEow" />


    <Button
        android:id="@+id/btnEditor_changeEow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_button_submit_thin_normal"
        android:text="@string/change"
        app:layout_constraintBottom_toTopOf="@id/comment_layout"
        app:layout_constraintEnd_toStartOf="@id/etEditorEOWdate"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnEditor_changeIns" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnEditor_changeEow"
        app:layout_constraintBottom_toTopOf="@id/insertSubmit"
        >

    <Button
        android:id="@+id/btneditorCommentEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_submit_thin_normal"
        android:text="@string/edit"
        app:layout_constraintBaseline_toBaselineOf="@id/tvEditorCommmentLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvEditorCommmentLabel"
        app:layout_constraintEnd_toStartOf="@id/tvEditorCommment"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvEditorCommmentLabel" />

    <TextView
        android:id="@+id/tvEditorCommment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBaseline_toBaselineOf="@id/tvEditorCommmentLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvEditorCommmentLabel"
        app:layout_constraintEnd_toStartOf="@id/tvEditorCommmentLabel"
        app:layout_constraintHorizontal_weight="0.7"
        app:layout_constraintStart_toEndOf="@id/btneditorCommentEdit"
        app:layout_constraintTop_toTopOf="@id/tvEditorCommmentLabel" />

    <Button
        android:id="@+id/btneditorCommentSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_submit_thin_normal"
        android:text="@string/save"
        app:layout_constraintBaseline_toBaselineOf="@id/tvEditorCommmentLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvEditorCommmentLabel"
        app:layout_constraintEnd_toStartOf="@id/etEditorCommment"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvEditorCommmentLabel" />

    <EditText
        android:id="@+id/etEditorCommment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/tvEditorCommmentLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvEditorCommmentLabel"
        app:layout_constraintEnd_toStartOf="@id/tvEditorCommmentLabel"
        app:layout_constraintHorizontal_weight="0.7"
        app:layout_constraintStart_toEndOf="@id/btneditorCommentSave"
        app:layout_constraintTop_toTopOf="@id/tvEditorCommmentLabel" />

    <TextView
        android:id="@+id/tvEditorCommmentLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="הערות "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
    <Button
        android:id="@+id/insertSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_button_submit_clicked_ok"
        android:text="@string/confirm"
        app:layout_constraintBottom_toTopOf="@id/divider1"
        app:layout_constraintEnd_toStartOf="@id/insertCancel"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_layout" />

    <Button
        android:id="@+id/insertCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_button_submit_clicked_error"
        android:text="@string/cancel"
        app:layout_constraintBaseline_toBaselineOf="@id/insertSubmit"
        app:layout_constraintBottom_toTopOf="@id/divider1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/insertSubmit"
        app:layout_constraintTop_toBottomOf="@id/comment_layout" />


    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="3dp"
        android:background="@drawable/shape_divider"
        android:backgroundTint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/editorMove"
        app:layout_constraintTop_toBottomOf="@id/insertSubmit" />

    <Button
        android:id="@+id/editorMove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_button_submit_clicked_info"
        android:text="@string/move_device"
        app:layout_constraintBottom_toTopOf="@id/editorDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1" />


    <Button
        android:id="@+id/editorDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_button_submit_clicked_error"
        android:text="@string/delete_device"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editorMove" />


</android.support.constraint.ConstraintLayout>