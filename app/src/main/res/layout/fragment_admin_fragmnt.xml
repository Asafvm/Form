<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/white"
    android:padding="20dp"
    tools:context=".menu.AdminFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/admin_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_menuTitle"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/svAdminMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/admin_title">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/admin_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"

                >

                <!-- BUTTONS -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/adminMainMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="3">

                    <Button
                        android:id="@+id/admin_btnLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_button_submit_normal"
                        android:text="@string/admin_addLocation"
                        app:layout_constraintBottom_toTopOf="@id/admin_btnDevice"
                        app:layout_constraintTop_toTopOf="parent" />


                    <Button
                        android:id="@+id/admin_btnDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_button_submit_normal"
                        android:text="@string/admin_addDevice"
                        app:layout_constraintBottom_toTopOf="@id/admin_btnPart"
                        app:layout_constraintTop_toBottomOf="@id/admin_btnLocation" />

                    <Button
                        android:id="@+id/admin_btnPart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_button_submit_normal"
                        android:text="@string/admin_addPart"
                        app:layout_constraintTop_toBottomOf="@id/admin_btnDevice" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- DEVICES -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/adminDeviceMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="3">

                    <TextView
                        android:id="@+id/admin_tvDeviceCodeNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="קוד פריט"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etDeviceCodeNumber"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/admin_etDeviceCodeNumber" />

                    <EditText
                        android:id="@+id/admin_etDeviceCodeNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvDeviceCodeNumber"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/admin_tvDeviceCodeName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="שם פריט"

                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etDeviceCodeName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/admin_etDeviceCodeName"
                        app:layout_constraintTop_toBottomOf="@id/admin_etDeviceCodeName" />

                    <EditText
                        android:id="@+id/admin_etDeviceCodeName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvDeviceCodeName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etDeviceCodeNumber" />

                    <TextView
                        android:id="@+id/admin_tvDeviceModel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="מודל פריט"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etDeviceModel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/admin_etDeviceModel" />

                    <EditText
                        android:id="@+id/admin_etDeviceModel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvDeviceModel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etDeviceCodeName" />

                    <TextView
                        android:id="@+id/admin_tvDevicePrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="מחיר"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etDevicePrice"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/admin_etDevicePrice" />

                    <EditText
                        android:id="@+id/admin_etDevicePrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvDevicePrice"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etDeviceModel" />

                    <TextView
                        android:id="@+id/admin_tvDeviceCalValid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="תוקף כיול"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etDeviceCalValid"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/admin_etDeviceCalValid" />

                    <EditText
                        android:id="@+id/admin_etDeviceCalValid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvDeviceCalValid"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etDevicePrice"

                        />


                    <TextView
                        android:id="@+id/admin_tvDeviceInstallDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="תאריך התקנה"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etDeviceInstallDate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/admin_etDeviceInstallDate" />

                    <EditText
                        android:id="@+id/admin_etDeviceInstallDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvDeviceInstallDate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etDeviceCalValid" />

                    <TextView
                        android:id="@+id/admin_tvDeviceMaintenanceDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="תאריך כיול הבא"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etDeviceMaintenanceDate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/admin_etDeviceMaintenanceDate" />

                    <EditText
                        android:id="@+id/admin_etDeviceMaintenanceDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvDeviceMaintenanceDate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etDeviceInstallDate" />

                    <TextView
                        android:id="@+id/admin_tvDeviceWarrantyDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="תוקף אחריות"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etDeviceWarrantyDate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/admin_etDeviceWarrantyDate" />

                    <EditText
                        android:id="@+id/admin_etDeviceWarrantyDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvDeviceWarrantyDate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etDeviceMaintenanceDate" />


                    <Switch
                        android:id="@+id/admin_swDeviceUnderWarranty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="תחת אחריות"
                        app:layout_constraintTop_toBottomOf="@id/admin_etDeviceWarrantyDate" />


                    <TextView
                        android:id="@+id/admin_tvDeviceComments"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="הערות"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etDeviceComments"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/admin_etDeviceComments" />

                    <EditText
                        android:id="@+id/admin_etDeviceComments"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvDeviceComments"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_swDeviceUnderWarranty" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- PARTS -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/adminPartMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="3">


                    <Switch
                        android:id="@+id/admin_swPartActive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="חלק פעיל"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/admin_etPartRef"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvPartRef"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_swPartActive"

                        />

                    <TextView
                        android:id="@+id/admin_tvPartRef"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="מספר פריט"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etPartRef"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etPartRef" />

                    <EditText
                        android:id="@+id/admin_etPartDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvPartRef"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etPartRef"

                        />

                    <TextView
                        android:id="@+id/admin_tvPartDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="תיאור פריט"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etPartDesc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etPartDesc" />


                    <EditText
                        android:id="@+id/admin_etPartPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvPartPrice"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etPartDesc"

                        />

                    <TextView
                        android:id="@+id/admin_tvPartPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="עלות חלק"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etPartPrice"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etPartPrice" />

                    <EditText
                        android:id="@+id/admin_etPartSupplier"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvPartSupplier"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etPartPrice"

                        />

                    <TextView
                        android:id="@+id/admin_tvPartSupplier"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ספק"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etPartSupplier"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etPartSupplier" />

                    <EditText
                        android:id="@+id/admin_etPartLocCol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Column"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvPartLocation"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etPartLocRow"
                        app:layout_constraintTop_toBottomOf="@id/admin_etPartSupplier" />

                    <EditText
                        android:id="@+id/admin_etPartLocRow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Row"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etPartLocCol"
                        app:layout_constraintEnd_toStartOf="@id/admin_etPartLocCol"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etPartLocBox"

                        />

                    <EditText
                        android:id="@+id/admin_etPartLocBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Box"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etPartLocCol"
                        app:layout_constraintEnd_toStartOf="@id/admin_etPartLocRow"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"

                        />

                    <TextView
                        android:id="@+id/admin_tvPartLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="מיקום"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etPartLocCol"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etPartLocCol" />

                    <EditText
                        android:id="@+id/admin_etPartMinGlobal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvPartMinGlobal"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etPartLocCol"

                        />

                    <TextView
                        android:id="@+id/admin_tvPartMinGlobal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="מינימום גלובלי"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etPartMinGlobal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etPartMinPersonal" />

                    <EditText
                        android:id="@+id/admin_etPartMinPersonal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvPartMinPersonal"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etPartMinGlobal"

                        />

                    <TextView
                        android:id="@+id/admin_tvPartMinPersonal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="מינימום אישי"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etPartMinPersonal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etPartMinPersonal" />

                    <EditText
                        android:id="@+id/admin_etPartDevice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvPartMinPersonal"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etPartMinPersonal"

                        />

                    <TextView
                        android:id="@+id/admin_tvPartDevice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="מכשיר"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etPartDevice"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etPartDevice" />

                    <EditText
                        android:id="@+id/admin_etPartSerial"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvPartSerial"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etPartDevice"

                        />

                    <TextView
                        android:id="@+id/admin_tvPartSerial"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="מספר סידורי"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etPartSerial"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etPartSerial" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- LOCATIONS -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/adminLocationMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:visibility="visible"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="3">

                    <TextView
                        android:id="@+id/admin_tvLocationTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="מיקום"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/admin_tvLocationName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etLocationName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintEnd_toStartOf="@id/admin_etLocationName" />

                    <EditText
                        android:id="@+id/admin_etLocationName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        app:layout_constraintStart_toEndOf="@id/admin_tvLocationName"
                        app:layout_constraintHorizontal_weight="4"
                        app:layout_constraintEnd_toStartOf="@id/admin_btn_confirmNewLocation"
                        app:layout_constraintTop_toBottomOf="@id/admin_tvLocationTitle" />

                    <Button
                        android:id="@+id/admin_btn_confirmNewLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/admin_etLocationName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etLocationName"
                        app:layout_constraintHorizontal_weight="1"
                        android:text="+"

                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/admin_locationnDetailsMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/admin_etLocationName"
                        android:visibility="gone"
                        >
                    <TextView
                        android:id="@+id/admin_tvLocationThoroughfare"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="כתובת"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etLocationAddressSubThoroughfare"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etLocationAddressCity" />

                    <EditText
                        android:id="@+id/admin_etLocationAddressSubThoroughfare"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="מספר"
                        android:inputType="text"
                        android:maxLines="1"
                        app:layout_constraintBottom_toTopOf="@id/admin_etCoordinatesLat"
                        app:layout_constraintEnd_toStartOf="@id/admin_etLocationAddressStreet"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/admin_etLocationAddressStreet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="רחוב"
                        android:inputType="text"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etLocationAddressSubThoroughfare"
                        app:layout_constraintEnd_toStartOf="@id/admin_etLocationAddressCity"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etLocationAddressSubThoroughfare" />

                    <EditText
                        android:id="@+id/admin_etLocationAddressCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="עיר"
                        android:inputType="text"
                        android:maxLines="1"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etLocationAddressSubThoroughfare"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvLocationThoroughfare"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etLocationAddressStreet" />

                    <TextView
                        android:id="@+id/admin_tvCoordinates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="קואורדינטות"
                        app:layout_constraintBottom_toBottomOf="@id/admin_btnCoordinatesGet"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etCoordinatesLong"
                        app:layout_constraintTop_toTopOf="@id/admin_btnCoordinatesGet" />

                    <TextView
                        android:id="@+id/admin_etCoordinatesLong"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:hint="אורך"
                        app:layout_constraintBottom_toBottomOf="@id/admin_btnCoordinatesGet"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvCoordinates"
                        app:layout_constraintHorizontal_weight="1.2"
                        app:layout_constraintStart_toEndOf="@id/admin_etCoordinatesLat"
                        app:layout_constraintTop_toTopOf="@id/admin_btnCoordinatesGet" />

                    <TextView
                        android:id="@+id/admin_etCoordinatesLat"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:hint="רוחב"
                        app:layout_constraintBottom_toBottomOf="@id/admin_btnCoordinatesGet"
                        app:layout_constraintEnd_toStartOf="@id/admin_etCoordinatesLong"
                        app:layout_constraintHorizontal_weight="1.2"
                        app:layout_constraintStart_toEndOf="@id/admin_btnCoordinatesGet"
                        app:layout_constraintTop_toTopOf="@id/admin_btnCoordinatesGet" />

                    <ImageButton
                        android:id="@+id/admin_btnCoordinatesGet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_on_white_24dp"
                        app:layout_constraintEnd_toStartOf="@id/admin_etCoordinatesLat"
                        app:layout_constraintHorizontal_weight="0.6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etLocationAddressCity" />

                    <TextView
                        android:id="@+id/admin_tvLocationComments"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="הערות"
                        app:layout_constraintBaseline_toBaselineOf="@id/admin_etLocationComments"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/admin_etLocationComments" />

                    <EditText
                        android:id="@+id/admin_etLocationComments"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        app:layout_constraintEnd_toStartOf="@id/admin_tvLocationComments"
                        app:layout_constraintHorizontal_weight="3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/admin_etCoordinatesLat" />

                        <Button
                            android:id="@+id/admin_btn_locationAdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/admin_etLocationComments"
                            android:text="הוסף מיקום"
                            android:background="@android:color/holo_blue_light"

                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/admin_subLocationMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/admin_locationnDetailsMenu">

                        <TextView
                            android:id="@+id/admin_tvSubLocationTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="תת מיקום"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/admin_subLocationName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/admin_subLocationPhone"
                            app:layout_constraintTop_toBottomOf="@id/admin_tvSubLocationTitle"
                            android:hint="שם"
                            android:inputType="text"
                            android:maxLines="1"
                            app:layout_constraintHorizontal_weight="2"
                            />

                        <EditText
                            android:id="@+id/admin_subLocationPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="מספר טלפון"
                            app:layout_constraintStart_toEndOf="@id/admin_subLocationName"
                            app:layout_constraintEnd_toStartOf="@id/admin_btn_subLocationAdd"
                            app:layout_constraintBaseline_toBaselineOf="@id/admin_subLocationName"
                            android:inputType="phone"
                            android:maxLines="1"
                            app:layout_constraintHorizontal_weight="2"
                            />

                        <EditText
                            android:id="@+id/admin_subLocationComments"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:hint="הערות"
                            app:layout_constraintEnd_toStartOf="@id/admin_btn_subLocationAdd"
                            app:layout_constraintTop_toBottomOf="@id/admin_subLocationName"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            app:layout_constraintHorizontal_weight="2"
                            />

                        <ImageButton
                            android:id="@+id/admin_btn_subLocationAdd"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_plus_one_black_24dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toEndOf="@id/admin_subLocationPhone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/admin_subLocationName"
                            app:layout_constraintBottom_toBottomOf="@id/admin_subLocationComments"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/admin_btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button_submit"
            android:text="הוסף"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/admin_btnBack" />

        <Button
            android:id="@+id/admin_btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button_submit_clicked_error"
            android:text="חזרה"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>