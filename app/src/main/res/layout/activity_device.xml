<?xml version="1.0" encoding="utf-8"?><!-- Use DrawerLayout as root container for activity -->

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#999999"
            tools:context="il.co.diamed.com.form.DeviceActivity">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="#999999"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/diamedDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#aa0000"
                android:padding="15dp"
                app:layout_constraintVertical_chainStyle="spread">

                <Button
                    android:id="@+id/idInc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/incubator"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/idCent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/centrifuge"
                    app:layout_constraintTop_toBottomOf="@id/idInc"
                     />

                <Button
                    android:id="@+id/idDiacent12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/diacent"
                    app:layout_constraintTop_toBottomOf="@id/idCent" />

                <Button
                    android:id="@+id/idDiacentCW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/diacentCW"
                    app:layout_constraintTop_toBottomOf="@id/idDiacent12" />

                <Button
                    android:id="@+id/idGelstation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/idGeltation"
                    app:layout_constraintTop_toBottomOf="@id/idDiacentCW" />

                <Button
                    android:id="@+id/ih500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ih500"
                    app:layout_constraintTop_toBottomOf="@id/idGelstation" />

                <Button
                    android:id="@+id/ih1000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ih1000"
                    app:layout_constraintTop_toBottomOf="@id/ih500" />


            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/medigalDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0044ff"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/diamedDevices">

                <Button
                    android:id="@+id/plasma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/plasma"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="spread" />

                <Button
                    android:id="@+id/docon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/docon"
                    app:layout_constraintTop_toBottomOf="@id/plasma" />

                <Button
                    android:id="@+id/biomixer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/biomixer"
                    app:layout_constraintTop_toBottomOf="@id/docon" />


            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/samsungDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000055"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/medigalDevices">


                <Button
                    android:id="@+id/hc10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hc10"
                    app:layout_constraintTop_toTopOf="parent" />


                <Button
                    android:id="@+id/docureader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/docureader"
                    app:layout_constraintTop_toBottomOf="@id/hc10" />

                <Button
                    android:id="@+id/ib10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ib10"
                    app:layout_constraintTop_toBottomOf="@id/docureader" />


                <Button
                    android:id="@+id/pt10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pt10"
                    app:layout_constraintTop_toBottomOf="@id/ib10" />


                <Button
                    android:id="@+id/edan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edan"
                    app:layout_constraintTop_toBottomOf="@id/pt10" />


            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view" />

</android.support.v4.widget.DrawerLayout>

