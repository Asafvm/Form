<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_window_menu"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/insertTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/insertTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etItem_serial"
        />


    <AutoCompleteTextView
        android:id="@+id/etItem_serial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:completionThreshold="3"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@id/insertSubmit"
        app:layout_constraintEnd_toStartOf="@id/etItem_description"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/insertTitle"
        android:hint="@string/itemSerial"
        />

    <AutoCompleteTextView
        android:id="@+id/etItem_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:completionThreshold="3"
        android:maxLines="2"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/insertSubmit"
        app:layout_constraintEnd_toStartOf="@id/etItem_inStock"
        app:layout_constraintHorizontal_weight="0.6"
        app:layout_constraintStart_toEndOf="@id/etItem_serial"
        app:layout_constraintTop_toBottomOf="@id/insertTitle"
        android:hint="@string/itemDescription"
        />

    <EditText
        android:id="@+id/etItem_inStock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@id/insertSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintStart_toEndOf="@id/etItem_description"
        app:layout_constraintTop_toBottomOf="@id/insertTitle"
        android:visibility="gone"
        android:hint="@string/inStock"

        />

    <Button
        android:id="@+id/insertSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:background="@drawable/shape_button_submit_clicked_ok"
        app:layout_constraintTop_toBottomOf="@id/etItem_serial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/insertCancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        android:layout_margin="5dp"
        />
    <Button
        android:id="@+id/insertCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:background="@drawable/shape_button_submit_clicked_error"
        app:layout_constraintTop_toBottomOf="@id/etItem_serial"
        app:layout_constraintStart_toEndOf="@id/insertSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintHorizontal_weight="1"
        />

</android.support.constraint.ConstraintLayout>
