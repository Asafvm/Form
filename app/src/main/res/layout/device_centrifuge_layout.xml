<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lowLayout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:paddingHorizontal="10dp"
    app:layout_constraintBottom_toTopOf="@id/footer"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/header"
    app:layout_constraintVertical_weight="3">


    <include
        android:id="@+id/serialLayout"
        layout="@layout/form_serial" />


    <TextView
        android:id="@+id/tvDeviceModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/centType"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/rgModelSelect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/serialLayout"/>

    <RadioGroup
        android:id="@+id/rgModelSelect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDeviceModel"
        app:layout_constraintBottom_toTopOf="@id/centSpeed">

        <RadioButton
            android:id="@+id/c6S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/centType6S" />

        <RadioButton
            android:id="@+id/c12S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/centType12S" />

        <RadioButton
            android:id="@+id/c12SII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/centType12SII" />

        <RadioButton
            android:id="@+id/c24S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/centType24S" />

        <RadioButton
            android:id="@+id/cL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/centTypeL" />
    </RadioGroup>


    <ImageView
        android:id="@+id/icSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cached_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/centSpeed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintStart_toEndOf="@id/centSpeed"
        app:layout_constraintTop_toTopOf="@id/centSpeed"
        app:layout_constraintBottom_toTopOf="@id/centTime"/>


    <EditText
        android:id="@+id/centSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/centSpeed"
        android:inputType="number"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@id/rgModelSelect"
        app:layout_constraintEnd_toStartOf="@id/icSpeed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/spacer2"
        app:layout_constraintBottom_toTopOf="@id/centTime"

        />

    <Space
        android:id="@+id/spacer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@id/centSpeed"
        app:layout_constraintStart_toEndOf="@id/tvcentExpectedSpeed"
        />
    <TextView
        android:id="@+id/tvcentExpectedSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/centExpectedTime"
        android:textAlignment="center"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/rgModelSelect"
        app:layout_constraintEnd_toStartOf="@id/spacer2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/centExpectedSpeed"
        app:layout_constraintBottom_toTopOf="@id/centFanSwitch"/>



    <EditText
        android:id="@+id/centExpectedSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAlignment="textEnd"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvcentExpectedSpeed"
        app:layout_constraintTop_toBottomOf="@id/rgModelSelect"
        app:layout_constraintBottom_toTopOf="@id/centFanSwitch"
         />

    <ImageView
        android:id="@+id/icTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:src="@drawable/ic_alarm_black_24dp"
        app:layout_constraintHorizontal_weight="0.4"
        app:layout_constraintBottom_toBottomOf="@id/centTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/centTime"
        app:layout_constraintTop_toTopOf="@id/centTime" />

    <EditText
        android:id="@+id/centTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@id/icTime"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/spacer"
        app:layout_constraintTop_toBottomOf="@id/centSpeed" />

    <Space
        android:id="@+id/spacer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1.5"
        app:layout_constraintStart_toEndOf="@id/centFanSwitch"
        app:layout_constraintEnd_toStartOf="@id/centTime"
        />
    <Switch
        android:id="@+id/centFanSwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/checkDeviceFan"
        app:layout_constraintEnd_toStartOf="@id/spacer"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/centExpectedSpeed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/centTime"/>


</androidx.constraintlayout.widget.ConstraintLayout>