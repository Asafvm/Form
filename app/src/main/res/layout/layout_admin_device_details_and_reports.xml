<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/layout_admin_device">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/admin_device_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add Device" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reports" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_device_layout_BaseDeviceReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/admin_device_tablayout">


        <TextView
            android:id="@+id/admin_tvDeviceCalValid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Calibration Validity"
            app:layout_constraintBaseline_toBaselineOf="@id/admin_etDeviceCalValid"
            app:layout_constraintEnd_toStartOf="@id/admin_etDeviceCalValid"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/admin_etDeviceCalValid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:layout_constraintEnd_toStartOf="@id/admin_tvDeviceCalValidMonths"
            app:layout_constraintStart_toEndOf="@id/admin_tvDeviceCalValid"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/admin_tvDeviceCalValidMonths"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Months"
            app:layout_constraintBaseline_toBaselineOf="@id/admin_etDeviceCalValid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/admin_etDeviceCalValid" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/admin_device_ReportRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/admin_etDeviceCalValid" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_device_layout_device_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/admin_device_tablayout">

        <Spinner
            android:id="@+id/admin_device_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/admin_tvDeviceSerialNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Serial Number"
            app:layout_constraintBaseline_toBaselineOf="@id/admin_etDeviceSerialNumber"
            app:layout_constraintEnd_toStartOf="@id/admin_etDeviceSerialNumber"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/admin_etDeviceSerialNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/admin_tvDeviceSerialNumber"
            app:layout_constraintTop_toBottomOf="@id/admin_device_spinner"
            tools:ignore="TextFields" />

        <Button
            android:id="@+id/admin_device_btnAddInstanceDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Device"
            app:layout_constraintTop_toBottomOf="@id/admin_etDeviceSerialNumber" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/admin_device_DeviceListRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/admin_device_btnAddInstanceDevice" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>