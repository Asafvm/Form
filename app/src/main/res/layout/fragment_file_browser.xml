<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:alpha="1"
    >



    <ListView

        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/path_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="0.1" />

    <EditText
        android:id="@+id/et_searchtext"
        app:layout_constraintTop_toBottomOf="@id/path_text"
        app:layout_constraintBottom_toTopOf="@id/viewScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search"
        />

    <ScrollView
        android:id="@+id/viewScroller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_searchtext"
        app:layout_constraintVertical_weight="0.9">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_file_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>