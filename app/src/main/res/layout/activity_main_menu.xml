<?xml version="1.0" encoding="utf-8"?><!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <android.support.constraint.ConstraintLayout
            android:id="@+id/mainWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_background"
            >
            <TextView
                android:id="@+id/titleUser"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintVertical_weight="0.1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/upcomingCal"/>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/upcomingCal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:background="@drawable/border"
                android:alpha="0.8"
                app:layout_constraintBottom_toTopOf="@id/inventoryShoplist"
                app:layout_constraintTop_toBottomOf="@id/titleUser"
                app:layout_constraintVertical_weight="1">

                <TextView
                    android:id="@+id/titleCal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="כיולים הבאים"
                    android:textAlignment="center"/>

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/inventoryShoplist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:background="@drawable/border"
                android:alpha="0.8"
                app:layout_constraintTop_toBottomOf="@id/upcomingCal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="1">
                <TextView
                    android:id="@+id/titleInv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="חסר במלאי"
                    android:textAlignment="center"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>


    <FrameLayout
        android:id="@+id/module_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header" />
    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
</android.support.v4.widget.DrawerLayout>
