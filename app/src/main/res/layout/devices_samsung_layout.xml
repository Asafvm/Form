<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/samsungDevices"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_samsung"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/hc10"
        android:background="@drawable/shape_button_device_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deviceSelect"
        android:text="@string/hc10"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/docureader"
        android:background="@drawable/shape_button_device_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deviceSelect"
        android:text="@string/docureader"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/hc10" />

    <Button
        android:id="@+id/ib10"
        android:background="@drawable/shape_button_device_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deviceSelect"
        android:text="@string/ib10"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/docureader" />


    <Button
        android:id="@+id/pt10"
        android:background="@drawable/shape_button_device_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deviceSelect"
        android:text="@string/pt10"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/ib10" />


    <Button
        android:id="@+id/edan"
        android:background="@drawable/shape_button_device_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deviceSelect"
        android:text="@string/edan"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/pt10" />


</androidx.constraintlayout.widget.ConstraintLayout>

