<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calibration.Diacent12Activity">

    <include
        android:id="@+id/header"
        layout="@layout/form_header" />


    <View
        android:id="@+id/lowLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


    <include
        android:id="@+id/footer"
        layout="@layout/form_footer" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/PDFprogressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_pdf_progress"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:visibility="invisible"

        >

        <ProgressBar
            android:id="@+id/pbPDF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvPDF"/>

        <TextView
            android:id="@+id/tvPDF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textDirection="locale"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:autoSizeMaxTextSize="30dp"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/pbPDF"
            app:layout_constraintHorizontal_weight="0.7"
            app:layout_constraintEnd_toEndOf="parent"/>


        <FrameLayout
            android:id="@+id/pdffragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>